<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability ="blocksDescendants">

    <TextView
        android:id="@+id/playlist_view_itemCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="5dp" />

    <TextView
        android:id="@+id/playlist_view_songTitle"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/playlist_view_itemCount"
        android:layout_marginStart="25dp"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/playlist_view_artistName"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/playlist_view_itemCount"
        android:layout_alignTop="@id/playlist_view_songTitle"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="12dp"
        android:textSize="12sp" />

    <ImageButton
        android:id="@+id/moreOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:src="@drawable/ic_more" />
</RelativeLayout>